{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2015",
    "moduleResolution": "node",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": false,
    "declaration": false,
    "sourceMap": false,
    "outDir": "./dist",
    "rootDir": "../",
    "baseUrl": "../",
    "paths": {
      "@/*": ["./*"]
    },
    "types": ["chrome"],
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "typeRoots": ["../node_modules/@types"]
  },
  "include": [
    "../*.ts",
    "../lib/*.ts",
    "../components/*.ts"
  ],
  "exclude": [
    "../node_modules",
    "../dist",
    "../build"
  ]
}
